NAME = pipex
INCLUDE = pipex.h
CC = cc
CFLAGS = -Wall -Wextra -Werror -I. -Ilibft/inc
RM = rm -rf

OBJDIR = obj

#librarys
LIBFT_DIR = libft
LIBFT = $(LIBFT_DIR)/libft.a

FILES = pipex.c\
		errors_free.c\
		process.c\
		setup.c\


OBJS = $(addprefix $(OBJDIR)/, $(FILES:%.c=%.o))
DEPS = $(OBJS:.o=.d)

all: $(NAME)

$(OBJDIR)/%.o: %.c
	@mkdir -p $(OBJDIR)
	@echo "ðŸ›  Compiling $<..."
	@$(CC) $(CFLAGS) -MMD -MP -c $< -o $@

$(NAME): $(OBJS) $(LIBFT) 
	@echo "ðŸ”— Linking $(NAME)..."
	@$(CC) $(CFLAGS) $(OBJS) $(LIBFT) -o $(NAME)
	@echo "âœ… Compilation finished successfully."

#build libft only if libft.a is outdated
$(LIBFT):
	@echo "ðŸ“¦ Building libft..."
	@$(MAKE) -s -C $(LIBFT_DIR)

clean:
	@echo "ðŸ§¹ Cleaning objects & dependencies..."
	@$(RM) $(OBJDIR)
	@$(MAKE) -s -C $(LIBFT_DIR) clean

fclean: clean
	@echo "ðŸ—‘ removing executables & libreries..."
	@$(RM) $(NAME)
	@$(MAKE) -s -C $(LIBFT_DIR) fclean
	@echo "âœ… Cleanup completed successfully."
re: fclean all

# Include automatically generated dependencies
-include $(DEPS) 

.PHONY: all clean fclean re